{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "../dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    /* Debugging Options */
    "sourceMap": true, // Generate source maps
    "inlineSources": true // Embed TS sources into maps
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
